<?xml version="1.0"?>
<project name="TrabBiblioteca" basedir="." default="package">
  
    <target name="clean">
        <delete dir="./build" />
        <mkdir dir="./build" />
    </target>
    
    <target name="package" depends="clean">
        <pharpackage
            destfile="./build/package.phar"
            alias="package.phar"
            basedir="./library"
            stub="./library/stub.php">
            <fileset dir="./library">
                <include name="**/**" />
            </fileset>
            <metadata>
                <element name="version" value="1.0" />
                <element name="authors">
                    <element name="John Doe">
                        <element name="e-mail" value="john@example.com" />
                    </element>
                </element>
            </metadata>
        </pharpackage>
    </target>
    
</project>